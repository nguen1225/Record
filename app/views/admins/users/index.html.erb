
<table class="table table-bordered">
  <thead>
    <tr class="tr_option">
      <th>All User Count</th>
    </tr>
  </thead>

  <tbody>
  	<tr>
  		<td class="user_count">
  			<%= @users.count %>
  		</td>
	</tr>
  </tbody>
</table>

<table class="table table-bordered">
  <thead>
    <tr class="tr_option">
      <th>登録アドレス</th>
      <th colspan="3">登録日</th>
    </tr>
  </thead>

  <tbody>
  	<tr>
    	<% @users.each do |user| %>
    	<td class="user">
			<%= user.email %>
		</td>
		<td class="user">
			<%= user.created_at.strftime('%Y/%m/%d %H:%M') %>
		</td>
	</tr>
<% end %>
  </tbody>
</table>