<div class="title">
  <p>お問い合わせ</p>
</div>

<hr>

<h3 class="text-center">通知</h3>
    <%= link_to admins_contacts_destroy_all_path, method: :delete do %>
        <i class="fas fa-trash" style="color: black;"></i>
        <h7 style="color: black;">全削除</h7>
    <% end %>
    <hr>
<% if @contacts.exists? %>
    <div class="users-index">
        <table class="table table-bordered">
			<thead>
				<tr class="tr_option">
					<th>差出人</th>
					<th>受信日</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @contacts.each do |contact| %>
					<tr>
						<td><%= contact.email %></td>
						<td><%= contact.created_at.strftime("%Y%m月%d日 ") %></td>
						<td class="option"><%= link_to "返信", edit_admins_contact_path(contact), class: "link_btn" %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
    </div>
<% else %>
    <p>通知はありません。</p>
<% end %>