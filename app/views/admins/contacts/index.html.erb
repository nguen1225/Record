<h2>お問い合わせ</h2>
<table class="table table-bordered">
	<thead>
		<tr class="tr_option">
			<th>差出人</th>
			<th>受信日</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @contacts.each do |contact| %>
			<tr>
				<td><%= contact.email %></td>
				<td><%= contact.created_at.strftime("%Y%m月%d日 ") %></td>
				<td class="option"><%= link_to "返信", edit_admins_contact_path(contact) %></td>
			</tr>
		<% end %>
	</tbody>
</table>