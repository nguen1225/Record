<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render 'searchs/search', search: @search %><br>
      <%= render 'genreslist', genres: @genres %>
    </div>

    <div class="col-xs-9">
      <h1>Genres</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Genre Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to 'Edit',edit_genre_path(genre) %></td>
              <td id="genre_destroy_<%= @genre.id %>"><%= render 'genredestroy', genre: genre %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <div id="genre_create_<%= @genre.id %>">
        <%= render 'genrecreate', genre: @genre %>
      </div>
    </div>
  </div>
</div>