<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>
  <div class="field">
    <%= form.label :value %>
    <%= form.number_field :value, step: "0.1" %>
  </div>

  <div class="field">
    <%= form.collection_select :genre_id,Genre.where(user_id: current_user.id),:id,:name,:include_blank => " カテゴリー選択 "%>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.datetime_select :end_date %>
  </div>

  <div class="field">
    <%= form.label :alarm %>
    <%= form.check_box :alarm, {}, "on", "off" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
