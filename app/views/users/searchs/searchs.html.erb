<h1>Events</h1>

<table class="table table-bordered">
  <thead>
    <tr class="tr_option">
      <th colspan="1"></th>
      <th>カテゴリー</th>
      <th>開始日</th>
      <th>終了日</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.genre.name %></td>
        <td><%= event.start_date.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= event.end_date.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="option"><%= link_to '詳細', event, class: "link_btn" %><br>
          <%= link_to '削除', event, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @events %>