<p id="notice"><%= notice %></p>

<table class="table table-bordered">
  <thead>
    <tr class="tr_option">
      <th>カテゴリー</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="genre">
    <% @genres.each do |genre| %>
      <%= render 'genre', genre: genre %>
    <% end %>
  </tbody>
</table>

<%= paginate @genres %>

<div id="genre_form_<%= @genre.id %>">
  <%= render 'genreform', genre: @genre, url: genres_path %>
</div>


