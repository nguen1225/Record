<h2>予定前です</h2>

<table class="table table-bordered">
    <thead>
      <tr class="tr_option">
        <th>Title</th>
        <th>Text</th>
        <th>Value</th>
        <th>Category</th>
        <th>Start</th>
        <th>End</th>
        <th>Alarm</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @event.title %></td>
        <td><%= @event.text %></td>
        <td><%= @event.value.to_f %></td>
        <td><%= @event.genre.name %></td>
        <td><%= @event.start_date.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= @event.end_date.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= @event.alarm_i18n %></td>
      </tr>
    </tbody>
  </table>