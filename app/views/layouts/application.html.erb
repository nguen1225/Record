<!DOCTYPE html>
<html>
  <head>
    <title>Record</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </head>

  <body>
    <header>
        <div class="slider">
        <div class="slider_image"><%= image_tag '1.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '2.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '3.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '4.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '5.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '6.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '7.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '8.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '9.jpg', class: 'slick_image' %></div>
        <div class="slider_image"><%= image_tag '10.jpg', class: 'slick_image' %></div>
        </div>
        <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Record</a>
          </div>

          <div class="collapse navbar-collapse" id="navbarEexample1">
            <ul class="nav navbar-nav">
              <% if request.url.include?('admin') %>
                <% if admin_signed_in? %>
                <li><%= link_to "Log out", destroy_admin_session_path, method: :delete %></li>
                <% end %>
              <% elsif user_signed_in? %>
                <li><%= link_to "top", root_path %></li>
                <li><%= link_to "new event", new_event_path %></li>
                <li><%= link_to "new genre", genres_path %></li>
                <li><%= link_to "all events", events_path %></li>
                <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
              <% else %>
                <li><%= link_to "about" %></li>
                <li><%= link_to "Sign up", new_user_registration_path %></li>
                <li><%= link_to "Log in", new_user_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="container-fluid">
      <div class="row">
        <div id="sidenav" class="col-xs-3">
          <% if request.url.include?('admin') %>
            <% if admin_signed_in? %>
            <% end %>
          <% elsif user_signed_in? %>
            <%= render 'users/searchs/search', search: @search %><br>
            <%= render 'users/genres/genreslist', genres: @genres %>
          <% end %>
        </div>
        <div class="col-xs-9">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>



