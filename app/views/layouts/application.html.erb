        <%= link_to "new genre", genres_path %><br>
        <%= link_to "new event", new_event_path %><br>
        <%= link_to "graph", graphs_index_path %><br>
        <%= link_to "Log out", destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to "about" %><br>
        <%= link_to "Sign up", new_user_registration_path %><br>
        <%= link_to "Log in", new_user_session_path %>
      <% end %>
  </body>
</html>


<%= yield %>
